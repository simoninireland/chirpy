# find the project root directory
import os
cwd = os.path.dirname(os.path.realpath(__file__))
rootDir = os.path.dirname(os.path.dirname(cwd))

# load everything else
import chirpy
from datetime import datetime
from sys import argv

# find the model files relative to the project root
modelFile = os.path.join(rootDir, "models/audio-model-int8.tflite")
labelFile = os.path.join(rootDir, "models/labels/en_uk.txt")


def main(sampleFile):
    # load the model
    chirpy.loadModel(modelFile)
    chirpy.loadLabels(labelFile)

    # load a signal
    now = datetime.now()
    sig, sampleRate = chirpy.load(sampleFile)
    loadTime = datetime.now()
    segments = chirpy.segment(sig, sampleRate, 3, 1)
    segmentTime = datetime.now()

    # classify the signal
    prediction = chirpy.classify(segments)
    classifyTime = datetime.now()

    # report
    mli, confidence = chirpy.mostLikelyIndex(prediction)
    print(chirpy.identify(mli)[1])
    print(confidence)
    print(chirpy.makeObservation(mli, confidence))

    print("Load time = " + (loadTime - now))
    print("Signal segmantation time = " + (segmentTime - loadTime))
    print("Classification time = " + (classifyTime - segmentTime))

    # chirpy.report(chirpy.identify(mli)[1])


if __name__ == "__main__":
    sampleFile = argv[1]
    main(sampleFile)
